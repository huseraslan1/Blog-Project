

@model AppUser

@section UserInfo {

    <div class="image">
        <img src="@Model.Image" class="img-circle elevation-2" alt="User Image">
    </div>
    <div class="info">
        <a href="/Admin/AppUser/UserDetail/@Model.ID" class="d-block">@Model.FullName</a>
    </div>

}

@section Hosgeldin {
    <h2>Hoşgeldin, @Model.FullName .... </h2>
}




<div class="row">
    <div class="col-md-8">
        @await Component.InvokeAsync("Articles")
    </div>
    <div class="col-md-4">
        @await Component.InvokeAsync("UserFollowCategory", new { id=Model.ID })
    </div>
</div>