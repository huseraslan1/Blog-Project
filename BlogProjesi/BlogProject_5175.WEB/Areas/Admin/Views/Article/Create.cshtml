
@model ArticleCreateDTO

<div class="card card-primary col-md-12">
    <div class="card-header">
        <h3 class="card-title">MAKALE OLUŞTURMA PANELİ</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="" asp-validation-summary="All">

            </div>
            <div class="form-group">
                <label asp-for="Title">Başlık</label>
                <input asp-for="Title" type="text" class="form-control">

            </div>
            <div class="form-group">
                <label asp-for="Content">İçerik</label>
                <textarea asp-for="Content" class="form-control" rows="17" cols="50" maxlength="20000"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath">Fotoğraf</label>
                <input asp-for="ImagePath" type="file" class="form-control">
            </div>
            <input asp-for="AppUserID" type="hidden" />

            <div class="form-group">
                <label asp-for="Categories">Kategori</label>
                <br />
                @foreach (var item in Model.Categories)
                {
                    <input value="@item.ID" type="checkbox" name="Categories[]" id="Categories">
                    <label asp-for="Categories" name="Categories[]" id="Categories">@item.Name &nbsp;</label>
                }

                
            </div>

        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">OLUŞTUR</button>
        </div>
    </form>
</div>