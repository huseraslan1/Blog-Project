
@model List<Category>

<div class="text-center col-md-12">


    @if (Model.Count > 0)
    {
        <h3>Takip edilen kategoriler</h3>
        <div class="col-md-12">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="position-relative p-2">
                        <h3><a class="btn btn-outline-secondary" asp-action="Filter" asp-controller="Article" asp-route-id="@item.ID">@item.Name</a></h3>
                    </div>
                }

            </div>
            <div class="row text-center">
                <h2>Daha Fazla İncelemek İsterseniz</h2>
                <h4 style="text-align:center"><a asp-action="List" asp-controller="Category">KATEGORİ LİSTESİ</a></h4>
            </div>
        </div>
    }
    else
    {
        <h3>Herhangi Bir Kategori Takip edilmiyor...</h3>
        <h4 style="text-align:center"><a asp-action="List" asp-controller="Category">KATEGORİ LİSTESİ</a></h4>
    }

</div>
