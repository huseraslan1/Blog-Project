

@model List<GetArticleWithUserVM>

@foreach (var item in Model.OrderByDescending(a => a.CreatedDate))
{
    <div class="col-md-12  d-flex align-items-stretch flex-column mb-4">
        <div class="card bg-light d-flex flex-fill">

            <div class="card-body pt-0">
                <div class="row">
                    <div class="col-7">

                        <h2 class="lead"><br /><b>@item.Title</b></h2>
                        <p class="text-muted text-sm">
                            @if (item.Content.Length >= 150)
                            {
                                @item.Content.Substring(0, 150)
                            }
                            else
                            {@item.Content}
                        </p>
                        <ul class="ml-4 mb-0 fa-ul text-muted">
                            <li><a asp-controller="Article" asp-action="Detail" asp-route-id="@item.ArticleId">Devamını okumak için tıklayınız...</a></li>
                        </ul>
                    </div>
                    <div class="col-5 text-right">
                        <img src="@item.Image" alt="user-avatar" class="img-circle img-fluid">
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="text-right">
                    <div class="text-left">
                        <p style="position:absolute"> Oluşma Tarihi: @item.CreatedDate.ToShortDateString()</p>
                    </div>
                    Yazar: 
                    <a asp-action="UserDetail" asp-controller="AppUser" asp-route-id="@item.UserId" class="btn btn-sm btn-primary">
                        @item.UserFullName
                    </a>
                </div>
                
            </div>
        </div>
    </div>
}